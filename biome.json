{
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80,
		"ignore": [ "*.jsx", "*.tsx" ]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": { "useNamingConvention": "off" },
			"suspicious": { "noConsoleLog": "off" },
			"correctness": { "useExhaustiveDependencies": "off" },
			"nursery": { "useImportRestrictions": "off" }
		}
	},
	"organizeImports": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
