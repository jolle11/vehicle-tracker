{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80,
		"ignore": [ "*.jsx", "*.tsx" ]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style":
			{
				"useNamingConvention": "off",
				"noDefaultExport": "off",
				"noImplicitBoolean": "off",
				"noNonNullAssertion": "off"
			},
			"suspicious":
			{
				"noConsoleLog": "off",
				"noExplicitAny": "off"
			},
			"correctness":
			{
				"useExhaustiveDependencies": "off"
			},
			"nursery":
			{
				"useImportRestrictions": "off"
			},
			"a11y":
			{
				"noSvgWithoutTitle": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
